<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_in"
    android:background="@drawable/gradient_background">

    <EditText
        android:id="@+id/sign_in_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Email"
        android:textSize="30sp"
        android:padding="20dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/smooth_edge_text_views"
        android:inputType="textEmailAddress"
        />


    <EditText

        android:id="@+id/sign_in_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/sign_in_email"
        android:hint="Password"
        android:textSize="30sp"
        android:padding="20dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/smooth_edge_text_views"
        android:inputType="textPassword"
        />
    <Button
        android:id="@+id/confirm_sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in_text"
        android:paddingVertical="10dp"
        android:paddingHorizontal="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/sign_in_pass"
        android:background="@drawable/smooth_edges_buttons"
        android:layout_marginTop="50dp"
        android:onClick="confirmSignIn"
        />

</androidx.constraintlayout.widget.ConstraintLayout>