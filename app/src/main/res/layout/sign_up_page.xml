<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_background">

    <EditText
        android:id="@+id/sign_up_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/sign_up_pass"
        app:layout_constraintRight_toRightOf="@id/sign_up_pass"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Enter your email"
        android:textSize="30sp"
        android:padding="20dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:background="@color/white"
        />


    <EditText

        android:id="@+id/sign_up_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/sign_up_confirm_pass"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/sign_up_email"
        android:hint="Enter Password"
        android:textSize="30sp"
        android:padding="20dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:background="@color/white"
        />

    <EditText
        android:id="@+id/sign_up_confirm_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/sign_up_pass"
        android:hint="Confirm Password"
        android:textSize="30sp"
        android:padding="20dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="30dp"
        android:background="@color/white"
        />


</androidx.constraintlayout.widget.ConstraintLayout>