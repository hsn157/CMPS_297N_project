<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lb.edu.aub.cmps297n_attendance_tracker">
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CMPS297N_Attendance_Tracker">
        <activity android:name=".Take_Manual_Attendance"></activity>
        <activity android:name=".Take_Attendance" />
        <activity android:name=".List_of_Attendees" />
        <activity android:name=".Section_Information" />
        <activity android:name=".Add_a_Course" />
        <activity android:name=".List_Courses" />
        <activity android:name=".Sign_in" />
        <activity android:name=".Sign_up" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Capture_Id"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden">

        </activity>
    </application>

</manifest>